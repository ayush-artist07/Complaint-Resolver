@model IEnumerable<ComplaintResolver.Model.Feedback>

@{
    ViewBag.Title = "AllFeedbacksRecieved";
}

<h2>Feedbacks Recieved</h2>


<table class="table demotbl" id="Id">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ComplaintId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.complaints.Employee_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.complaints.Date_assigned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.complaints.ProductType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.complaints.ComplaintDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tbody class="table">
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.ComplaintId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.complaints.Employee_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.complaints.Date_assigned)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.complaints.ProductType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.complaints.ComplaintDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Message)
                </td>
            </tr>
        </tbody>
    }

</table>

@section Css{
    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/css/TableDesign.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>

    <script>

        $(document).ready(function () {

            $('#Id').DataTable();
        });

    </script>
}
