@model IEnumerable<ComplaintResolver.Model.ComplaintForm>

@{
    ViewBag.Title = "All Complaints";
}

<h2 class="mb-3">All Complaints</h2>


<table class="table demotbl" id="tableId">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Complaint_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date_assigned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Complaint_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date_assigned)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Complaint_id }, new { @class = "btn btn-primary" })
                </td>
                @if (Convert.ToString(item.Status) == "Solved")
                {
                    <td>

                        @Html.ActionLink("Feedback", "AddUserFeedback", "UserHome", new { id = item.Complaint_id }, new { @class = "btn btn-primary" })

                    </td>
                }

            </tr>
        </tbody>

    }

</table>
@section Css{
    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
        <link href="~/Content/css/TableDesign.css" rel="stylesheet" />
    
}
@section Scripts{
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>

    <script>

        $(document).ready(function () {

            $('#tableId').DataTable();
        });

    </script>
}


