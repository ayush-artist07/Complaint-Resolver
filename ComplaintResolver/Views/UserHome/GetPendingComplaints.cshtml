@model IEnumerable<ComplaintResolver.Model.ComplaintForm>

@{
    ViewBag.Title = "GetPendingComplaints";
}


<h1> Pending Complaints</h1>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Complaint_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee_Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Date_assigned)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ComplaintDescription)
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Complaint_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_assigned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ComplaintDescription)
            </td>


            <td>
                @Html.ActionLink("Details", "DetailsPending","UserHome", new { id = item.Complaint_id }, new { @class = "btn btn-info" })
            </td>
        </tr>
    }

</table>

